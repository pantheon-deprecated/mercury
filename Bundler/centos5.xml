<Bundle name='centos5'>

  <Group name='amazon-web-services' negate='true'>
    <Package name='libselinux'/>
    <Package name='libselinux-python'/>
    <Package name='libselinux-utils'/>
    <Package name='libsemanage'/>
    <Package name='selinux-policy'/>
    <Package name='selinux-policy-targeted'/>
  </Group>

  <BoundPackage name="gpg-pubkey" type="rpm">
    <Instance simplefile="/etc/pki/rpm-gpg/RPM-GPG-KEY-CentOS-5" version="e8562897" release="459f07a4"/>
    <Instance simplefile="/etc/pki/rpm-gpg/RPM-GPG-KEY-EPEL" version="217521f6" release="45e8a532"/>
    <Instance simplefile="/etc/pki/rpm-gpg/RPM-GPG-KEY-fourkitchens" version="dc699cc9" release="4ac01e7c"/>
    <Instance simplefile="/etc/pki/rpm-gpg/IUS-COMMUNITY-GPG-KEY" version="9cd4953f" release="4a9da118"/>
  </BoundPackage>

  <Package name='audit-libs-python'/>
  <Package name='authconfig'/>
  <Package name='bzip2'/>
  <Package name='checkpolicy'/>
  <Package name='cryptsetup-luks'/>
  <Package name='dbus'/>
  <Package name='dbus-glib'/>
  <Package name='dbus-libs'/>
  <Package name='diffutils'/>
  <Package name='ed'/>
  <Package name='epel-release'/>
  <Package name='filesystem'>
    <Ignore name='/boot'/>
  </Package>
  <Package name='fipscheck'/>
  <Package name='fipscheck-lib'/>
  <Package name='fourkitchens-release'/>
  <Package name='groff'/>
  <Package name='hwdata'/>
  <Package name='iptables'>
    <Ignore name='/etc/sysconfig/iptables-config'/>
  </Package>
  <Package name='ius-release'/>
  <Package name='keyutils'/>
  <Package name='libusb'/>
  <Package name='libuser'/>
  <Package name='libvolume_id'/>
  <Package name='man'/>
  <Package name='nano'/>
  <Package name='newt'/>
  <Package name='openssh'/>
  <Package name='openssh-clients'/>
  <Package name='openssh-server'/>
  <Package name='pam'>
    <Ignore name='/etc/pam.d/system-auth'/>
  </Package>
  <Package name='passwd'/>
  <Package name='policycoreutils'/>
  <Package name='prelink'/>
  <Package name='rhpl'/>
  <Package name='rootfiles'/>
  <Package name='setools'/>
  <Package name='setserial'/>
  <Package name='slang'/>
  <Package name='sudo'/>
  <Package name='sysfsutils'/>
  <Package name='sysklogd'/>
  <Package name='tcl'/>
  <Package name='tcp_wrappers'/>
  <Package name='udftools'/>
  <Package name='usermode'/>
  <Package name='vim-common'/>
  <Package name='vixie-cron'/>
  <Package name='wget'/>
  <Package name='which'/>
  <Package name='wireless-tools'/>
  <Package name='yum'/>
  <Package name='yum-fastestmirror'/>

  <!-- Paths -->
  <Path name='/etc/mercury/templates/iptables' altsrc='/mercury/iptables'/>

  <!-- Services -->
  <Service name='crond'/> 
  <Service name='iptables'/>
  <Service name='lvm2-monitor'/>
  <Service name='mcstrans'/>
  <Service name='messagebus'/>
  <Service name='netfs'/>
  <Service name='network'/>
  <Service name='rawdevices'/>
  <Service name='restorecond'/>
  <Service name='rsyslog'/>
  <Service name='sshd'/>
  <Service name='syslog'/>

</Bundle>

